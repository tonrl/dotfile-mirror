{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",

    "logo": {
            "type" : "kitty-direct",
	    "source": "$HOME/.config/fastfetch/logo/cow.png",
	    "width": 45,
	    "height": 20,
            "padding" : {
                    "left" : 6,
                    "right" : 13,
            }
    },
    
    "display": {
	    "key": {
		    "width": 11
	},
        "bar": {
            "charElapsed": "=",
            "charTotal": "-",
            "width": 13
        }
    },

      "modules": [
	      "break",
        {
		    "type": "custom",
		    "format":"╭────╮──────── System Informations ─────────────",
		    "outputColor": "red"
	},
	{
            "type": "host",
            "key": "│ 󰌢  │",
            "keyColor": "red"
        },
//        {
//            "type": "cpu",
//            "key": "│   │",
//            "keyColor": "red"
//        },
        {
            "type": "disk",
            "key": "│   │",
            "keyColor": "red"
        },
        {
            "type": "memory",
            "key": "│ 󰑭  │",
            "keyColor": "red"
        },
//        {
//            "type": "swap",
//            "key": "│ 󰓡 ",
//            "keyColor": "red"
//        },
        {
            "type": "battery",
            "key": "│ 󰄌  │",
            "keyColor": "red"
        },
	{
		    "type": "custom",
		    "format":"╰────╯──────────────────────────────────────────",
		    "outputColor": "red"
	},
        {
		    "type": "custom",
		    "format":"╭────╮──────────────────────────────────────────",
		    "outputColor": "cyan"
	},
	{
            "type": "shell",
            "key":  "│   │",
            "keyColor": "cyan"
        },
        {
            "type": "terminal",
            "key": "│   │",
            "keyColor": "cyan"
        },
	{
            "type": "lm",
            "key": "│ 󰧨  │",
            "keyColor": "cyan"
        },
        {
            "type": "de",
            "key": "│   │",
            "keyColor": "cyan"
        },
        {
            "type": "wm",
            "key": "│   │",
            "keyColor": "cyan"
	},
	{
		"type": "custom",
		"format":"╰────╯──────────────────────────────────────────",
		"outputColor": "cyan"
	},
        {
		    "type": "custom",
		    "format":"╭────╮──────────────────────────────────────────",
		    "outputColor": "green"
	},
	{
            "type": "title",
            "key": "│   │",
            "format": "{user-name}@{host-name}",
            "keyColor": "green"
        },
        {
            "type": "os",
            "key": "│ {icon}  │", // Just get your distro's logo off nerdfonts.com
            "keyColor": "green"
        },
        {
            "type": "kernel",
            "key": "│   │",
            "keyColor": "green"
        },
        {
            "type": "packages",
            "key": "│ 󰏖  │",
            "keyColor": "green"
        },
        {
            "type": "uptime",
            "key": "│ 󰅐  │",
            "keyColor": "green"
        },
        {
            "type": "localip",
            "key": "│ 󰩟  │",
            "compact": true,
            "keyColor": "green"
        },
//        {
//            "type": "publicip",
//            "key": "│ 󰩠 ",
//            "keyColor": "green",
//            "timeout": 1000
//        },
	{
		"type": "custom",
		"format":"╰────╯──────────────────────────────────────────",
		"outputColor": "green"
	},





	"break",



      ]
}


